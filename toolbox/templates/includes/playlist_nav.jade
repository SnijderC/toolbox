.playlist_nav
    if page.data.next or page.data.previous
        if page.data.previous
            a(href="{{page.data.previous}}",title="Vorige item")
                span.tb-previous
        
        a(href="{{page.data.playlist_href}}",title="Terug naar het overzicht")
            span.index_button.tb-beer
            
        if page.data.next
            a(href="{{page.data.next}}",title="Volgende item")
                span.tb-next
    else
        a(href="{{page.data.playlist_href}}1/",title="Eerste artikel")
            span.tb-play